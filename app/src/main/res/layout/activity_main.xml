<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <!-- TextView com seu nome -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="#333333"
        android:textSize="18sp"
        android:backgroundTint="#E0E0E0"
        android:padding="12dp"
        android:text="Seu Nome Aqui"
        android:drawablePadding="8dp"/>

    <!-- Entrada de idade -->
    <EditText
        android:id="@+id/etAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Digite sua idade"
        android:textColor="#000000"
        android:textSize="16sp"
        android:maxLength="2"
        android:inputType="number"
        android:digits="0123456789"
        android:padding="8dp"
        android:backgroundTint="#B3E5FC" />

    <!-- Seleção de gênero -->
    <Spinner
        android:id="@+id/spinnerGender"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:backgroundTint="#FFECB3" />

    <!-- Botão de cálculo -->
    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#3F51B5"
        android:padding="12dp"
        android:text="Calcular"
        android:drawablePadding="8dp" />

    <!-- TextView de resultado -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif"
        android:textColor="#00796B"
        android:textSize="18sp"
        android:backgroundTint="#B2DFDB"
        android:padding="12dp"
        android:text="Resultado aqui"
        android:drawablePadding="8dp" />

</LinearLayout>
